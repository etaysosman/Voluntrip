<%- include('includes/head') %>
<link rel="stylesheet" href="/css/apply.css">
<title>Apply for <%= activity.title %> | VolunTrip</title>
</head>

<body>

<%- include('includes/menu') %>

<main class="container py-5">
  <div class="ap-center">
    
    <div class="ap-header">
      <div class="text-center">
        <span class="ap-badge">Application Form</span>
        <h1 class="ap-title">Apply for <%= activity.title %></h1>
        <p class="ap-subtitle">
          <i class="bi bi-geo-alt-fill"></i> <%= activity.location %> &nbsp;|&nbsp; 
          <i class="bi bi-building"></i> <%= activity.organizer %>
        </p>
      </div>
    </div>

    <div class="ap-card mt-4">
      <form action="/apply" method="POST">
        <input type="hidden" name="activityId" value="<%= activity.activityId %>">

        <div class="row g-4">
          <div class="col-md-6">
            <label for="fullName" class="form-label ap-label">Full Name</label>
            <input type="text" class="form-control ap-input" id="fullName" name="fullName" required>
          </div>

          <div class="col-md-6">
            <label for="email" class="form-label ap-label">Email Address</label>
            <input type="email" class="form-control ap-input" id="email" name="email" required>
          </div>

          <div class="col-12">
            <label for="phone" class="form-label ap-label">Phone Number</label>
            <input type="tel" class="form-control ap-input" id="phone" name="phone" placeholder="+972..." required>
          </div>

          <div class="col-12">
            <label for="experience" class="form-label ap-label">Previous Experience & Motivation</label>
            <textarea class="form-control ap-input" id="experience" name="experience" rows="5" placeholder="Tell us why you want to join..."></textarea>
          </div>

          <div class="col-12">
            <div class="form-check p-3 border rounded bg-light">
              <input class="form-check-input" type="checkbox" id="agreeToTerms" name="agreeToTerms" value="1" required>
              <label class="form-check-label small text-muted" for="agreeToTerms">
                I agree to the Terms & Conditions and consent to share my details with <strong><%= activity.organizer %></strong>.
              </label>
            </div>
          </div>

          <div class="col-12 mt-4 d-flex justify-content-between align-items-center">
            <a href="/explore" class="text-decoration-none text-muted fw-bold"><i class="bi bi-arrow-left"></i> Cancel</a>
            <button type="submit" class="btn btn-primary ap-btn-submit">Submit Application</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('includes/end') %>