<%- include('includes/starting-pages') %>

  <title>Register</title>
</head>

<body class="vt page-register">
  <div class="vt-bg"></div>

  <main class="vt-wrap">
    <div class="container">
      <div class="vt-auth">

        <a href="/" class="vt-back">‚Üê Back</a>

        <section class="vt-card">
          <h1 class="vt-title">Sign up</h1>

          <form action="/register" method="POST" class="signup-form vt-form">

            <div class="form-group row align-items-center vt-row">
                <label for="fullName" class="col-12 col-sm-4 col-form-label vt-label">Full Name</label>
                <div class="col-12 col-sm-7">
                <input type="text" class="form-control vt-input" id="fullName" name="fullName" required>
                </div>
            </div>

            <div class="form-group row align-items-center vt-row">
                <label for="id" class="col-12 col-sm-4 col-form-label vt-label">ID Number</label>
                <div class="col-12 col-sm-7">
                <input type="text" class="form-control vt-input" id="id" name="id" required>
                </div>
            </div>

            <div class="form-group row align-items-center vt-row">
                <label for="birthdate" class="col-12 col-sm-4 col-form-label vt-label">Birthdate</label>
                <div class="col-12 col-sm-7">
                <input type="date" class="form-control vt-input" id="birthdate" name="birthdate" required>
                </div>
            </div>

            <div class="form-group row align-items-center vt-row">
                <label for="email" class="col-12 col-sm-4 col-form-label vt-label">Email</label>
                <div class="col-12 col-sm-7">
                <input type="email" class="form-control vt-input" id="email" name="email" placeholder="email@email.com" required>
                </div>
            </div>

            <div class="form-group row align-items-center vt-row">
                <label for="username" class="col-12 col-sm-4 col-form-label vt-label">Username</label>
                <div class="col-12 col-sm-7">
                <input type="text" class="form-control vt-input" id="username" name="username" placeholder="username" required>
                </div>
            </div>

            <div class="form-group row align-items-center vt-row">
                <label for="password" class="col-12 col-sm-4 col-form-label vt-label">Password</label>
                <div class="col-12 col-sm-7">
                <input type="password" class="form-control vt-input" id="password" name="password" placeholder="Something strong :)" required>
                </div>
            </div>

            <br>

            <div>
                <div class="col-sm-7 offset-sm-4">
                <button type="submit" class="btn vt-btn vt-btn--dark w-50">Voluntrip Now</button>
                </div>
            </div>

            <!-- Add validation and error messages with javascript -->
            
            

        </form>

         <div class="vt-divider"></div>

         <div class="text-center">
            <p class="mb-2 text-muted">Having trouble?</p>
            <a href="https://alonnu.mtacloud.co.il/voluntrip-support/contact.html" class="btn vt-btn vt-btn--light px-5">Report An Issue</a>
          </div>

        </section>
      </div>
    </div>
  </main>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
